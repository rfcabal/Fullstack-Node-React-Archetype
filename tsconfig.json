{
    "compilerOptions": {
      "jsx": "react",
      "lib": ["es6", "dom"],
      "rootDir": "www/src",
      "module": "commonjs",
      "target": "es5",
      "sourceMap": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["node_modules/@types"]
    },
    "include": [
      "./www/src/**/*.tsx"
    ],
    "exclude": [
      "node_modules",
      "www/dist"
    ]
  }